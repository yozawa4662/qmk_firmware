.DEFAULT_GOAL := help
.PHONY: help
help:  ## Show this help
	@grep -E '^[a-zA-Z_\/-\%]+?.:.*?## .*$$' $(MAKEFILE_LIST) \
		| awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

.PHONY: flash
flash:
	qmk flash -kb crkbd -km yozawa4662

.PHONY: compile
compile:
	qmk compile -kb crkbd -km yozawa4662
